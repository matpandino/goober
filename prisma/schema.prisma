generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Rider {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  rides     Ride[]
}

model Driver {
  id        String   @id @default(uuid())
  name      String
  car       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  rides     Ride[]
}

model Ride {
  id          String     @id @default(uuid())
  riderId     String
  driverId    String?
  status      RideStatus @default(REQUESTED)
  fromName    String
  toName      String
  estDuration Int
  distance    Int
  cancelledAt DateTime?
  completedAt DateTime?
  startedAt   DateTime?
  acceptedAt  DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  fromLat     Float
  fromLng     Float
  toLat       Float
  toLng       Float
  driver      Driver?    @relation(fields: [driverId], references: [id])
  rider       Rider      @relation(fields: [riderId], references: [id])
}

enum RideStatus {
  REQUESTED
  ACCEPTED
  COMPLETED
  CANCELLED
}
